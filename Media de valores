qtd=0
soma=0
media=0
valor = float(input("Digite um valor:"))

while (valor > 0.0):
    soma = soma + valor
    qtd = qtd + 1
    valor = float(input("Digite um valor:"))

media = soma/qtd
print("\nA soma dos valores foi de:",soma)
print("\nA quantidade de valores foi de:",qtd)
print("\nA media dos valores foi de:",media)
